<div class="row">
    <section class="main col-md-9">
        {{#if data.post}}
        <article>
            <!-- Post title -->
            <h2>{{data.post.title}}</h2>
            
            <!-- Post feature image -->
            <img src="{{data.post.featureImage}}" alt="Feature Image" style="width:100%" />
            
            <br /><br />
            
            <!-- Post body using the safeHTML helper to prevent unsafe HTML -->
            <div>{{#safeHTML data.post.body}}{{/safeHTML}}</div>
            
            <br /><br />
            
            <!-- Post category -->
            <strong>Category:</strong> {{data.post.category}}<br />
            
            <!-- Post last updated date -->
            <strong>Last Updated:</strong> {{data.post.postDate}}
        </article>
        {{else}}
        <div class="col-md-12 text-center">
            <h2>{{data.message}}</h2>
            <p>Please try another Post / Category</p>
        </div>
        {{/if}}
    </section>

    <aside class="col-md-3">
        <br /><br />
        
        <!-- Posts List -->
        {{#if data.posts}}
        <h4>Posts</h4>
        <ul class="list-group">
            {{#each data.posts}}
                <a href="/blog/{{this.id}}?category={{../viewingCategory}}" class="list-group-item">{{this.title}}</a>
            {{/each}}
        </ul>
        {{/if}}

        <!-- Categories List -->
        {{#if data.categories}}
        <h4>Categories</h4>
        <ul class="list-group">
            {{#each data.categories}}
                <a href="/blog?category={{this.id}}" class="list-group-item">{{this.category}}</a>
            {{/each}}
        </ul>
        {{/if}}
    </aside>
</div>
